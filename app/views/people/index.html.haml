%h2 People

%p
  = link_to new_person_path do
    %i.icon-plus
    Add person

%ul.people
  - @people.each do |person|
    %li
      = link_to edit_person_path(person) do
        %i.icon-edit
      = link_to person_path(person) do
        %i.icon-search
      = link_to person_path(person), method: :delete, confirm: "Are you sure you want to remove #{person.full_name}?" do
        %i.icon-remove
      = render partial: 'person', locals: { person: person }
